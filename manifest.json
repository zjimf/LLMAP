{
  "manifest_version": 3,
  "name": "LLM Node Manager",
  "version": "0.1.0",
  "description": "Node-based summary & branch manager for LLM chats",
  "permissions": ["storage", "activeTab", "scripting"],
  "host_permissions": ["https://chatgpt.com/*"],
  "background": { "service_worker": "background.js" },
  "content_scripts": [
    {
      "matches": ["https://chatgpt.com/*"],
      "js": ["content-script.js"],
      "css": ["content-style.css"]
    }
  ],
  "action": {
    "default_icon": {
      "16": "icons/icon.png",
      "48": "icons/icon.png",
      "128": "icons/icon.png"
    }
  },
  "web_accessible_resources": [
    {
      "resources": ["sidebar/dist/index.html", "sidebar/dist/assets/*"],
      "matches": ["https://chatgpt.com/*"]
    }
  ]
}
